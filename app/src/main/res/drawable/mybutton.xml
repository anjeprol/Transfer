<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00796B" />
         <gradient android:angle="-90" android:startColor="#009688" android:endColor="#03beac"  />
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#02e6d0" />
         <solid android:color="#11bcac"/>
     </shape>
 </item>  
<item >
    <shape android:shape="rectangle"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#00796B" />
         <gradient android:angle="-90" android:startColor="#009688" android:endColor="#03beac" />
     </shape>
 </item>
</selector>