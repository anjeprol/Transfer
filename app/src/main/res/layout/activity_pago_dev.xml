<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pago_dev"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pramont.transfer.PagoDev">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:text="Paso 2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/pasoTV"/>

    <EditText
        android:id="@+id/cantidadEdTx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="$0.0"
        android:inputType="numberDecimal"
        android:layout_below="@+id/pasoTV"
        android:layout_toRightOf="@+id/lb_cantidad"
        android:layout_toEndOf="@+id/lb_cantidad"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/lb_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad:"
        android:layout_alignBaseline="@+id/cantidadEdTx"
        android:layout_alignBottom="@+id/cantidadEdTx"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
